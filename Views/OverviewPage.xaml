<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimesNewsApp.Views.OverviewPage"
             xmlns:model="clr-namespace:TimesNewsApp.Models"
             xmlns:viewmodel="clr-namespace:TimesNewsApp.ViewModels"
             x:DataType="viewmodel:OverviewPageViewModel"
             Title="{Binding Title}">
    <Grid RowDefinitions="*,*">
          <Grid Grid.Row="0"
                RowDefinitions="*,*">
            
            <CollectionView ItemsSource="{Binding Genre}"
                            ItemsLayout="HorizontalList"
                            Grid.Row="1">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Genre">
                        <Grid Padding="10">
                            <Frame HeightRequest="125">
                                <Grid Padding="0" ColumnDefinitions="125,*">
                                    <BoxView
                                           WidthRequest="125"
                                           HeightRequest="125"/>
                                    <StackLayout
                                        Grid.Column="1"
                                        Padding="10"
                                        VerticalOptions="Center">
                                    <Label Style="{StaticResource baseLabelStyle}" Text="{Binding Name}"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
              <Label Text="Movie Genre" FontSize="Header"/>
        </Grid>
        <Grid Grid.Row="1"/>
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="CenterAndExpand"
                               Grid.RowSpan="2"
                               Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>

