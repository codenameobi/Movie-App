<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimesNewsApp.Views.MovieDetailsPage"
             xmlns:model="clr-namespace:TimesNewsApp.Models"
             xmlns:viewmodel="clr-namespace:TimesNewsApp.ViewModels"
             x:DataType="viewmodel:MovieDetailsPageViewModel"
             Title="MovieDetailsPage">
    <StackLayout>
        <Label Text="{Binding SelectedMovie.title}"
               FontSize="Header"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        <Label Text="{Binding SelectedMovie.release_date}"/>
        <Label Text="{Binding SelectedMovie.overview}" />
    </StackLayout>
</ContentPage>

