<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimesNewsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimesNewsApp"
    xmlns:view="clr-namespace:TimesNewsApp.Views">


    <TabBar>
        <Tab  Icon="icon1.png">
            <ShellContent Title="Popular" ContentTemplate="{DataTemplate local:MainPage}"/>
            <ShellContent Title="Reviews" ContentTemplate="{DataTemplate local:MovieReviewPage}"/>
            <ShellContent Title="Search Movies" Icon="icon2.png" ContentTemplate="{DataTemplate view:MovieSearchPage}"/>
        </Tab>
    </TabBar>

</Shell>

